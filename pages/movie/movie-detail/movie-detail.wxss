.movieWrap {
  position: relative;
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  background: #fff;
}
.movieCover {
  margin-top: 10rpx;
  width: 100%;
  height: 480rpx;
  overflow: hidden;
}
.biaoshi {
  position: absolute;
  top: 350rpx;
  right: 60rpx;
  display: flex;
  font-size: 40rpx;
  flex-direction: column;
  color: rgb(102, 100, 100);
  background: #fff;
  width: 90rpx;
}
.biaoshi text.txt {
  padding: 16rpx 0rpx;
  text-align: center
}
.biaoshi text:first-child {
  text-align: right;
  position: relative;
  top: 24rpx;
}
.biaoshi text:last-child {
  text-align: left;
  /* position: relative;
  bottom: -10rpx;
  left: -16rpx; */
}
.mainDesc {
  width: 100%;
  margin: 10rpx 0rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 20rpx;
  box-sizing: border-box;
}
.mainDesc text {
  font-size: 32rpx;
}
.mainDesc .title {
  font-size: 36rpx;
  font-weight: bold;
  padding: 12rpx 0rpx;
}


.movieTxt {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  min-height: 500rpx;
  font-size: 30rpx;
  padding: 16rpx;
  box-sizing: border-box;
}
.movieTxt .summary {
  font-size: 34rpx;
  font-weight: bold;
}
.movieTxt .txt {
  text-indent: 2em;
}