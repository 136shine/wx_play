@import "movie-list/movie-list.wxss";
.movieContainer {
  height: 100%;
  background-color: #f1f0f0;
}
.searchBox {
  display: block;
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
  padding: 0rpx 10rpx;
  border-bottom: 1px solid #ccc;
}
.searchInput {
  position: absolute;
  display: inline-block;
  width: 76%;
  height: 100%;
  left: 26rpx;
  font-size: 28rpx;
  /* text-indent: 26rpx; */
}
.searchBtn {
  position: absolute;
  display: inline-block;
  width: 38rpx;
  height: 38rpx;
  vertical-align: middle;
  right: 26rpx;
  top: 34rpx;
}