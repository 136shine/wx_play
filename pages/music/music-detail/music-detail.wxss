.music-slider {
  float: left;
  width: 480rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin: 0rpx!important;
  margin-bottom: 100rpx!important;
}
.slider-time {
  width: 155rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #999;
  float: right;
   margin-bottom: 100rpx!important;
}

.music-control {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  background: rgb(247, 247, 247);
  margin-top: 50rpx;
  /* position: absolute;
  bottom: 30rpx;
  left: 0rpx; */
}
.music-control .play-icon {
  width: 50rpx;
  height: 40rpx;
}
.music-control .play-state, .music-control .play-mode {
  height: 50rpx;
}

.coverRotate{
  animation: coverRotate 10s linear infinite;
  -webkit-animation: coverRotate 10s linear infinite;
}
@keyframes coverRotate {
  0% {
    transform: rotate(0deg)
  }
  100% {
    transform: rotate(360deg)
  }
}

@-webkit-keyframes coverRotate {
  0% {
    -webkit-transform: rotate(0deg)
  }
  100% {
    -webkit-transform: rotate(360deg)
  }
}