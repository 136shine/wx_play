.music-detail-wrap {
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
  text-align: center;
}

.music-detail-wrap .music-play {
  display: flex;
  justify-content: center;
  width: 100%;
  overflow: hidden;
  margin-top: 30rpx;
}
.music-detail-wrap .music-play image {
  width: 500rpx;
  height: 500rpx;
  border-radius: 50%;
}

.music-detail-wrap .music-play video {
  display: none;
}

.music-detail-info {
  display: flex;
  height: 300rpx;
  flex-direction: column;
  margin-top: 20rpx;
  /* justify-content: center; */
}
.music-detail-info .lyric-wrap {
  font-size: 34rpx;
  color: rgb(6, 158, 204);
  width: 480rpx;
  margin: 0 auto;
  margin-top: 50rpx;
}

